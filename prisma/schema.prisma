// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "sqlite"
}

model Recipe {
  id           Int    @id @default(autoincrement())
  name         String
  mealType     String
  effort       String
  healthiness  String
  instructions String

  ingredients RecipeIngredient[]
  // ALL ingredients used in this recipe

  // User-visible fields
  rating        Int? // integer rating (e.g. 1-5)
  tags          Tag[] // many-to-many relation to Tag model
  lastMade      DateTime @default(now())
  timesIncluded Int      @default(0)
}

// link recipe table to ingredient table

model Ingredient {
  id   String @id @default(cuid())
  name String @unique

  recipes       RecipeIngredient[]
  shoppingLists ShoppingListItem[]
  // ALL recipes that use this ingredient
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique

  recipes Recipe[]
}

// link ingredient to recipe table

model RecipeIngredient {
  recipeId     Int
  ingredientId String

  recipe     Recipe     @relation(fields: [recipeId], references: [id])
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])

  @@id([recipeId, ingredientId])
}

// join these together

model Schedule {
  id        Int      @id @default(autoincrement())
  weekPlan  Json
  createdAt DateTime @default(now())
}

model ShoppingList {
  id        Int                @id @default(autoincrement())
  createdAt DateTime           @default(now())
  status    Boolean            @default(false) // false = active, true = completed
  items     ShoppingListItem[]
}

model ShoppingListItem {
  shoppingListId Int
  ingredientId   String
  checked        Boolean @default(false)

  shoppingList ShoppingList @relation(fields: [shoppingListId], references: [id], onDelete: Cascade)
  ingredient   Ingredient   @relation(fields: [ingredientId], references: [id])

  @@id([shoppingListId, ingredientId])
}
